{
  "manifest_version": 2,

  "name": "Spookyfy!",
  "version": "1.0",
  "description": "Get spooked every time you do something.",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/spook.js"]
    }
  ],
  "web_accessible_resources": [
    "assets/sound/spooky.mp3"
  ]
}
