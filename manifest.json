{
  "manifest_version": 2,
  "name": "Spookyfy!",
  "version": "1.2",
  "description": "Get spooked every time you do something.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/spook.js"]
    }
  ],
  "web_accessible_resources": [
    "assets/sound/spooky.mp3"
  ]
}
